<%= render 'shared/category_error' %>

<%= form_with(model: @category, local: true, class: "form-category") do |form| %>
  <div class="wrapper">
    <div class="form-signin shadow">

    <h1 class="text-center">Edit category name</h1>

    <div class="form-group">
      <%= form.label :category_name %>
      <%= form.text_field :category_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit class: "submit-btn", class: 'btn btn-primary' %>
    </div>

    <div class="dropdown-divider"></div>

    <div class="text-center">
      <%= link_to 'Cancel and return to categories listing', categories_path %>
    </div>
  </div>
<% end %>

