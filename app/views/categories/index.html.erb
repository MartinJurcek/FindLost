<h1 class="text-center my-3">Categories</h1>
  <% @categories.each do |category| %>
    <div class="container card text-center shadow mb-5 rounded" id="category-index">
      <div class="card-body">
        <h5 class="card-title"><%= link_to category.category_name, category_path(category) %></h5>
      </div>
      <div >
        <%= pluralize(category.stuffs.count, "stuffs") %>
      </div>
    </div>
  <% end %>
</div>

