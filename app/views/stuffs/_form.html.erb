<%= form_with(model: stuff, local: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :found_date %>
    <%= form.date_select :found_date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
