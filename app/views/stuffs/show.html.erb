<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @stuff.title %>
</p>

<div style="width:400px; height:auto">
  <%= image_tag(@stuff.image, style:'width:100%') if @stuff.image.attached? %>
</div>

<p>
  <strong>Description:</strong>
  <%= @stuff.description %>
</p>

<p>
  <strong>Found date:</strong>
  <%= @stuff.found_date %>
</p>

<% if user_signed_in? && (@stuff.user == current_user || current_user.admin?) %>
  <%= link_to 'Edit', edit_stuff_path(@stuff) %>
<% end %> 

<%= link_to 'Back', stuffs_path %>
